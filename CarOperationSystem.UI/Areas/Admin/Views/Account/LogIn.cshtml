@{
    ViewData["Title"] = "LogIn";
    Layout = null;
}
@model AccountVM

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container">
    <div class="row align-items-center h-100 ">
        <div class="col-4 offset-4">
            <form asp-controller="Account" asp-action="LogIn" method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input asp-for="Email" class="form-control" id="exampleInputEmail1" />
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" id="exampleInputPassword1" />
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="Persistent" class="form-check-input" id="exampleCheck1" />
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    <a class="float-end" asp-area="admin" asp-controller="Account" asp-action="ForgetPassword">

                        <span>
                            Forgot password?
                        </span>
                    </a>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-secondary" asp-area="admin" asp-controller="Account" asp-action="Registration">

                        Registration
                    </a>
                </div>

            </form>
        </div>


    </div>

</div>