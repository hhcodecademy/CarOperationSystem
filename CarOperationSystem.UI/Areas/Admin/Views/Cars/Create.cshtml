﻿
@model CarVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr>


<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Brands, nameof(Brand.Id), nameof(Brand.Name)))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ModelId" class="control-label"></label>
                <select asp-for="ModelId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Models, "Id", "Name"))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="ModelId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Milage" class="control-label"></label>
                <input asp-for="Milage" class="form-control" />
                <span asp-validation-for="Milage" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="row mt-3 justify-content-between">
        <div class="col-md-6">
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
        <div class="col-md-6 d-flex justify-content-end">
            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>


    </div>

</form>