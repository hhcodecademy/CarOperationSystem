﻿@{
    ViewData["Title"] = "Index";
}
@model List<CarVM>


<div class="row justify-content-end">
    <div class="col-4 d-flex justify-content-end">
        @Html.ActionLink("Add", "Create", "Cars", new { area = "admin" }, new { @class = "btn btn-primary" })
    </div>
</div>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">BrandName</th>
                <th scope="col">BrandName</th>
                <th scope="col">ModelName</th>
                <th scope="col">Color</th>
                <th scope="col">Milage</th>
                <th scope="col">Operation</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img width="150px" height="150px" src="@Url.Content($"~/images/{item.Thumbnail}")" /></td>
                    <td>@item.BrandName</td>
                    <td>@item.ModelName</td>
                    <td>@item.Color</td>
                    <td>@item.Milage</td>
                    <td>
                        <a class="btn btn-warning" asp-area="admin" asp-controller="Items" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="far fa-pen-to-square"></i>

                        </a>
                        <a class="btn btn-danger" asp-area="admin" asp-controller="Items" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>